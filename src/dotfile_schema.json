{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "JTDConfig",
  "description": "A collection of Dotfiles",
  "type": "object",
  "additionalProperties": {
      "type": "object",
      "properties": {
          "file": {
              "type": "string"
          },
          "target": {
              "type": "string"
          },
          "pre_install": {
              "type": "string"
          },
          "post_install": {
              "type": "string"
          }
      },
      "required": ["file", "target"],
      "additionalProperties": false
  }
}
